<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             Title="Bank App">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Le Bank App" FontSize="24" HorizontalOptions="Center" />

            <Button Text="Create Account" Clicked="OnCreateAccountClicked" />

            <Label x:Name="accountsLabel" FontSize="14" Padding="10" />

            <HorizontalStackLayout>
                <Button Text="Deposit" Clicked="OnDepositClicked" />
                <Button Text="Withdraw" Clicked="OnWithdrawClicked" />
                <Button Text="Delete Account" Clicked="OnDeleteAccountClicked" />
            </HorizontalStackLayout>

            <Label x:Name="TimerLabel"
       Text="New interest rate in: 30s"
       FontSize="14"
       HorizontalOptions="Center"
       VerticalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
